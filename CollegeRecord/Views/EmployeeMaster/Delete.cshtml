        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.departmentMaster)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.departmentMaster.DeptName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.designationMaster)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.designationMaster.DesignName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EmpId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </form>
</div>
